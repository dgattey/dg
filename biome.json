{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "includes": [
      "*",
      "**/*.js",
      "**/*.ts",
      "**/*.tsx",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.css",
      "**/*.json",
      "**/*.jsonc",
      "!**/next-env.d.ts",
      "!**/.cache",
      "!**/.next",
      "!**/.vscode",
      "!**/.vercel",
      "!**/.turbo",
      "!**/node_modules",
      "!**/pnpm-lock.yaml",
      "!**/migrations",
      "!**/dist"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "project": "recommended",
      "react": "all"
    },
    "enabled": true,
    "rules": {
      "complexity": {
        "noUselessStringConcat": "error",
        "useWhile": "error"
      },
      "correctness": {
        "noUndeclaredDependencies": "error",
        "useJsonImportAttributes": "error"
      },
      "nursery": {
        "noImportCycles": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noDelete": "error"
      },
      "recommended": true,
      "style": {
        "noUselessElse": "error",
        "useComponentExportOnlyModules": "off",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "generic"
          }
        },
        "useSelfClosingElements": "error"
      },
      "suspicious": {
        "noConsole": "error",
        "noEvolvingTypes": "error",
        "useAwait": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["packages/shared-core/logging/log.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["../**/packages/**"],
                    "message": "Import workspace packages by name (e.g. @dg/services/*, @dg/ui/*)."
                  }
                ]
              }
            }
          }
        }
      }
    },
    {
      "includes": ["packages/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": [
                      "../db/**",
                      "../maps/**",
                      "../og/**",
                      "../release/**",
                      "../services/**",
                      "../shared-core/**",
                      "../tsconfig/**",
                      "../ui/**"
                    ],
                    "message": "Import workspace packages by name (e.g. @dg/services/*, @dg/ui/*)."
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}
