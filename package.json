{
  "name": "dg",
  "version": "0.0.0-development",
  "description": "Dylan Gattey's public website, implemented in NextJS",
  "repository": "https://github.com/dgattey/dg.git",
  "homepage": "https://github.com/dgattey/dg#readme",
  "author": "Dylan Gattey <hi@dylangattey.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "SENTRY_IGNORE_API_RESOLUTION_ERROR=1 next dev",
    "build": "yarn db:generate && NEXT_PUBLIC_APP_VERSION=$(yarn version) next build",
    "serve": "next build && next start",
    "analyze": "ANALYZE=true yarn serve",
    "release": "semantic-release",
    "format": "prettier --loglevel warn --write \"**/*.{js,ts,tsx,css,md,json,yml}\"",
    "lint": "eslint . --cache --fix --ext .js,.ts,.tsx",
    "lint:styles": "stylelint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "lint:types": "tsc --noEmit",
    "codegen": "DOTENV_CONFIG_PATH='.env.development.local' graphql-codegen --require dotenv/config --config codegen.js",
    "db:local": "pscale connect dg --port 3309",
    "db:sync": "yarn pnpify prisma db push",
    "db:generate": "yarn pnpify prisma generate",
    "db:ui": "yarn pnpify prisma studio",
    "webhooks": "NODE_ENV=development esrun scripts/webhooks.ts",
    "webhooks:local": "cloudflared tunnel run dg",
    "webhooks:create": "yarn webhooks create",
    "webhooks:list": "yarn webhooks list",
    "webhooks:delete": "yarn webhooks delete",
    "version": "yarn esrun scripts/getVersion.ts",
    "clean": "rm -r .next"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^15.12.1",
    "@contentful/rich-text-types": "^15.12.1",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@picocss/pico": "^1.5.0",
    "@prisma/client": "^3.13.0",
    "@sentry/integrations": "^6.19.7",
    "@sentry/nextjs": "^6.19.7",
    "animate-css-grid": "^1.4.3",
    "api": "link:./src/api",
    "components": "link:./src/components",
    "eslint-config-dg": "link:./eslint-plugin-dg",
    "eslint-plugin-dg": "link:./eslint-plugin-dg",
    "graphql": "^16.4.0",
    "graphql-request": "^4.2.0",
    "hooks": "link:./src/hooks",
    "lucide-react": "^0.39.0",
    "mapbox-gl": "^2.8.2",
    "next": "^12.1.6",
    "pages": "link:./src/pages",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-intersection-observer": "^9.1.0",
    "react-is": "^18.1.0",
    "react-map-gl": "^7.0.11",
    "sharp": "^0.30.4",
    "styled-components": "^5.3.5",
    "swr": "^1.3.0",
    "webpack": "^5.72.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@digitak/esrun": "^3.2.2",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/near-operation-file-preset": "^2.2.11",
    "@graphql-codegen/typescript": "^2.4.10",
    "@graphql-codegen/typescript-operations": "^2.3.7",
    "@next/bundle-analyzer": "^12.1.6",
    "@semantic-release/changelog": "^6.0.1",
    "@sentry/cli": "^2.0.4",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/mapbox-gl": "^2.7.1",
    "@types/node": "^16.11.33",
    "@types/prop-types": "^15",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@yarnpkg/pnpify": "^4.0.0-rc.4",
    "cmd-ts": "^0.10.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-tsc": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "node-fetch": "^3.2.4",
    "postcss": "^8.4.13",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.6.2",
    "prisma": "^3.13.0",
    "prop-types": "^15.8.1",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.2",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-csstree-validator": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-no-restricted-syntax": "^2.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-z-index-value-constraint": "^1.2.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0"
}
