{
  "name": "dg",
  "version": "0.0.0-development",
  "description": "Dylan Gattey's public website, implemented in NextJS",
  "repository": "https://github.com/dgattey/dg.git",
  "homepage": "https://github.com/dgattey/dg#readme",
  "author": "Dylan Gattey <hi@dylangattey.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "SENTRY_IGNORE_API_RESOLUTION_ERROR=1 next dev",
    "build": "pnpm db:generate && NEXT_PUBLIC_APP_VERSION=$(pnpm -s version:fetch) next build",
    "build:analyze": "ANALYZE=true pnpm build",
    "serve": "next start",
    "release": "semantic-release",
    "format": "prettier --loglevel warn --write \"**/*.{js,ts,tsx,css,md,json,yml}\"",
    "lint": "eslint . --cache --fix --ext .js,.ts,.tsx",
    "lint:styles": "stylelint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "lint:types": "tsc --noEmit",
    "codegen": "DOTENV_CONFIG_PATH='.env.development.local' graphql-codegen --require dotenv/config --config codegen.js",
    "db:local": "pscale connect dg --port 3309",
    "db:sync": "pnpm prisma db push",
    "db:generate": "pnpm prisma generate",
    "db:ui": "pnpm prisma studio",
    "webhooks": "NODE_ENV=development node --require tsm scripts/webhooks.ts",
    "webhooks:local": "cloudflared tunnel run dg",
    "webhooks:create": "pnpm -s webhooks create",
    "webhooks:list": "pnpm -s webhooks list",
    "webhooks:delete": "pnpm -s webhooks delete",
    "version:fetch": "node --require tsm scripts/getVersion.ts",
    "clean": "rm -r .next"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "15.12.1",
    "@contentful/rich-text-types": "15.14.1",
    "@dg": "link:./src",
    "@fortawesome/fontawesome-svg-core": "6.2.1",
    "@fortawesome/free-brands-svg-icons": "6.2.1",
    "@fortawesome/free-solid-svg-icons": "6.2.1",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@next/bundle-analyzer": "13.0.4",
    "@picocss/pico": "1.5.6",
    "@prisma/client": "4.3.1",
    "@sentry/integrations": "7.20.0",
    "@sentry/nextjs": "7.20.0",
    "animate-css-grid": "1.4.3",
    "cmd-ts": "0.11.0",
    "dotenv": "16.0.3",
    "eslint-config-dg": "link:./eslint-plugin-dg",
    "eslint-plugin-dg": "link:./eslint-plugin-dg",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "lucide-react": "0.101.0",
    "mapbox-gl": "2.11.0",
    "next": "13.0.4",
    "node-fetch": "3.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intersection-observer": "9.4.1",
    "react-is": "18.2.0",
    "react-map-gl": "7.0.19",
    "sharp": "0.31.2",
    "styled-components": "5.3.6",
    "swr": "1.3.0",
    "webpack": "5.75.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@graphql-codegen/cli": "2.12.0",
    "@graphql-codegen/near-operation-file-preset": "2.4.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@semantic-release/changelog": "6.0.1",
    "@sentry/cli": "2.9.0",
    "@sentry/types": "7.20.0",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@types/mapbox-gl": "2.7.5",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.27.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "13.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "postcss": "8.4.19",
    "postcss-syntax": "0.36.2",
    "prettier": "2.7.1",
    "prisma": "4.3.1",
    "semantic-release": "19.0.5",
    "stylelint": "14.15.0",
    "stylelint-color-format": "1.1.0",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-csstree-validator": "2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.6.0",
    "stylelint-no-restricted-syntax": "2.0.0",
    "stylelint-processor-styled-components": "1.10.0",
    "stylelint-z-index-value-constraint": "1.2.0",
    "tsm": "2.2.2",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.16.1"
}
