generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
  output          = "../src/api/server/generated"
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

// Defines tokens for directly accessing a service. Expires at is a UTC time stamp
model Token {
  // Name of the token, used as an index
  name String @id @unique

  // Current access token, will expire at expiryAt
  accessToken String? @db.VarChar(768)

  // Token used to fetch a new accessToken
  refreshToken String? @db.VarChar(768)

  // Date at which the access token will expire
  expiryAt DateTime?
}

model StravaActivity {
  // This isn't auto generated - it's a Strava activity id and is a large value
  id BigInt @id @unique @db.UnsignedBigInt

  // When the activity was created - used for sorting
  activityStartDate DateTime

  // This maps to a StravaDetailedActivity
  activityData Json

  // When the activity was last updated in db
  lastUpdate DateTime?
}
