{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "config/env.secrets.keys",
    ".node-version",
    ".npmrc",
    "biome.json",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^migrate", "topo", "check", "check:types"],
      "env": [
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_SPACE_ID",
        "DATABASE_URL",
        "NEXT_PUBLIC_MAPBOX_TOKEN",
        "OAUTH_CALLBACK_URL",
        "SPOTIFY_CLIENT_ID",
        "STRAVA_CLIENT_ID",
        "STRAVA_CLIENT_SECRET",
        "STRAVA_VERIFY_TOKEN",
        "STRAVA_WEBHOOK_CALLBACK_URL"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "packages/db/database.config.mts",
        "packages/db/.sequelizerc",
        "apps/web/next.config.ts"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "!.next/dev/**",
        "!.next/diagnostics/**",
        "!.next/node_modules/**"
      ]
    },
    "build:analyze": {
      "dependsOn": ["^build", "topo"],
      "outputs": [".next/**"]
    },
    "build:serve": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "check": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "!.cursor/**", "!.github/**", "!.vscode/**"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "check:ci": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "!.cursor/**", "!.github/**", "!.vscode/**"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "check:types": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "!.cursor/**", "!.github/**", "!.vscode/**"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["dg#env", "topo", "migrate"],
      "env": [
        "CLOUDFLARE_TUNNEL_TOKEN",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_SPACE_ID",
        "DATABASE_URL",
        "LOGTAIL_SOURCE_TOKEN",
        "LOGTAIL_URL",
        "NEXT_PUBLIC_MAPBOX_TOKEN",
        "OAUTH_CALLBACK_URL",
        "SPOTIFY_CLIENT_ID",
        "STRAVA_CLIENT_ID",
        "STRAVA_CLIENT_SECRET",
        "STRAVA_VERIFY_TOKEN",
        "STRAVA_WEBHOOK_CALLBACK_URL"
      ],
      "inputs": ["apps/**/*", "packages/**/*"],
      "persistent": true
    },
    "dg#dev": {
      "cache": false,
      "dependsOn": ["dg#env"],
      "persistent": true
    },
    "dg#env": {
      "cache": false
    },
    "graphql:schema": {
      "cache": false
    },
    "migrate": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"],
      "env": ["DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", "packages/db/database.config.mts", "packages/db/.sequelizerc"]
    },
    "migrate:generate": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "migrate:status": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "migrate:undo": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "test": {
      "dependsOn": ["topo"],
      "env": ["DATABASE_URL_TEST"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md", "!**/*.mdx"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
