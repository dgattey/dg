{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "packages/db/database.config.mts",
    "config/env.secrets.keys",
    "scripts/generate-env",
    ".node-version",
    ".npmrc",
    ".sequelizerc",
    "biome.json",
    "next.config.js",
    "tsconfig.json"
  ],
  "globalEnv": [
    "CLOUDFLARE_TUNNEL_TOKEN",
    "CONTENTFUL_ACCESS_TOKEN",
    "CONTENTFUL_SPACE_ID",
    "DATABASE_URL",
    "DATABASE_URL_TEST",
    "LOGTAIL_SOURCE_TOKEN",
    "LOGTAIL_URL",
    "NEXT_PUBLIC_MAPBOX_TOKEN",
    "OAUTH_CALLBACK_URL",
    "SPOTIFY_CLIENT_ID",
    "STRAVA_CLIENT_ID",
    "STRAVA_CLIENT_SECRET",
    "STRAVA_VERIFY_TOKEN",
    "STRAVA_WEBHOOK_CALLBACK_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^migrate", "topo", "check", "check:types"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build", "topo"],
      "outputs": [".next/**"]
    },
    "build:serve": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "check": {
      "dependsOn": ["topo"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "check:ci": {
      "dependsOn": ["topo"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "check:types": {
      "dependsOn": ["topo"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["dg#env", "topo", "migrate"],
      "inputs": ["apps/**/*", "packages/**/*"],
      "persistent": true
    },
    "dg#dev": {
      "cache": false,
      "dependsOn": ["dg#env"],
      "persistent": true
    },
    "dg#env": {
      "cache": false
    },
    "graphql:schema": {
      "cache": false
    },
    "migrate": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "migrate:generate": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "migrate:status": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "migrate:undo": {
      "cache": false,
      "dependsOn": ["dg#env", "topo"]
    },
    "test": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "../../packages/**", "!**/*.md", "!**/*.mdx"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
