  },
  "dependencies": {
    "shared-core": "workspace:*"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "catalog:",
    "@graphql-codegen/near-operation-file-preset": "3.1.0",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-operations": "4.6.1",
    "dotenv-mono": "catalog:",
    "eslint": "catalog:",
    "eslint-config-dg": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "catalog:"
  }
}
