{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules", "**/*/dist", "**/*/build", "**/*/.next"]
}
